[include]
	path = include/personal-config
[init]
  defaultBranch = main
[merge]
  ff = only
[pull]
  ff = only
	rebase = true
[push]
  followTags = true
[credential]
  helper = osxkeychain
  useHttpPath = false
[commit]
  gpsign = true
  gpgsign = true
[gpg]
  format  = ssh
  program = /opt/homebrew/bin/gpg
[help]
  autocorrect = 1
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
